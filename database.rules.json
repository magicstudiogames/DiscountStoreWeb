{
    "rules": {
        "cards": {
            ".read": "auth.uid != null",
            ".write": "auth.uid != null"
        },
        "requests": {
            ".read": "auth.uid != null || root.child('users').child(auth.uid).child('admin').val() == true",
            ".write": "auth.uid != null || root.child('users').child(auth.uid).child('admin').val() == true"
        },
        "users": {
            ".read": "root.child('users').child(auth.uid).child('admin').val() == true",
            ".write": "root.child('users').child(auth.uid).child('admin').val() == true",
            "$uid": {
                ".read": "auth.uid == $uid",
                ".write": "auth.uid == $uid"
            }
        }
    }
}
